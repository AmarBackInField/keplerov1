{
  "info": {
    "name": "Gmail FastAPI Service",
    "description": "Collection for testing Gmail FastAPI endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "your-email@gmail.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authorization",
      "item": [
        {
          "name": "Get Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "Authorize Gmail (Visit in Browser)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/authorize",
              "host": ["{{base_url}}"],
              "path": ["authorize"]
            },
            "description": "Visit this URL in browser to authorize Gmail access"
          }
        },
        {
          "name": "List Connected Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/connected-users",
              "host": ["{{base_url}}"],
              "path": ["api", "connected-users"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Send Email",
      "item": [
        {
          "name": "Send Simple Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"recipient@example.com\",\n  \"subject\": \"Test Email from Postman\",\n  \"body\": \"This is a test email sent from the Gmail FastAPI service using Postman.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/send-email",
              "host": ["{{base_url}}"],
              "path": ["api", "send-email"]
            }
          }
        },
        {
          "name": "Send Email with CC and BCC",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"to\": \"recipient@example.com\",\n  \"subject\": \"Test Email with CC/BCC\",\n  \"body\": \"This email includes CC and BCC recipients.\",\n  \"cc\": [\"cc1@example.com\", \"cc2@example.com\"],\n  \"bcc\": [\"bcc@example.com\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/send-email",
              "host": ["{{base_url}}"],
              "path": ["api", "send-email"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Search Emails",
      "item": [
        {
          "name": "Search Unread Emails",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"is:unread\",\n  \"max_results\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search-emails",
              "host": ["{{base_url}}"],
              "path": ["api", "search-emails"]
            }
          }
        },
        {
          "name": "Search by Sender",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"from:noreply@example.com\",\n  \"max_results\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search-emails",
              "host": ["{{base_url}}"],
              "path": ["api", "search-emails"]
            }
          }
        },
        {
          "name": "Search by Subject",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"subject:meeting\",\n  \"max_results\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search-emails",
              "host": ["{{base_url}}"],
              "path": ["api", "search-emails"]
            }
          }
        },
        {
          "name": "Search with Date Filter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"after:2024/01/01 has:attachment\",\n  \"max_results\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search-emails",
              "host": ["{{base_url}}"],
              "path": ["api", "search-emails"]
            }
          }
        },
        {
          "name": "Complex Search Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"from:important@example.com OR from:urgent@example.com is:unread\",\n  \"max_results\": 15\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/search-emails",
              "host": ["{{base_url}}"],
              "path": ["api", "search-emails"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Get Threads",
      "item": [
        {
          "name": "Get Last 10 Threads",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"n\": 10\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/get-threads",
              "host": ["{{base_url}}"],
              "path": ["api", "get-threads"]
            }
          }
        },
        {
          "name": "Get Last 5 Threads",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"n\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/get-threads",
              "host": ["{{base_url}}"],
              "path": ["api", "get-threads"]
            }
          }
        },
        {
          "name": "Get Last 20 Threads",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"n\": 20\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/get-threads",
              "host": ["{{base_url}}"],
              "path": ["api", "get-threads"]
            }
          }
        },
        {
          "name": "Get Specific Thread Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-User-Email",
                "value": "{{user_email}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/get-thread/THREAD_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["api", "get-thread", "THREAD_ID_HERE"]
            },
            "description": "Replace THREAD_ID_HERE with actual thread ID from previous requests"
          }
        }
      ]
    }
  ]
}
